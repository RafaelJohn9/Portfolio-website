# Default server configuration
#
server {

    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    # SSL configuration
    #
    # listen 443 ssl default_server;
    # listen [::]:443 ssl default_server;
    #
    # Note: You should disable gzip for SSL traffic.
    # See: https://bugs.debian.org/773332
    #
    # Read up on ssl_ciphers to ensure a secure configuration.
    # See: https://bugs.debian.org/765782
    #
    # Self signed certs generated by the ssl-cert package
    # Don't use them in a production server!
    #
    # include snippets/snakeoil.conf;

    # deny access to .htaccess files, if Apache's document root
    # concurs with nginx's one
    #
    #location ~ /\.ht {
    #	deny all;
    #}

    root /var/www/html;

    # Add index.php to the list if you are using PHP
    index index.html index.htm index.nginx-debian.html;

    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        try_files $uri $uri/ @404;
    }

    location /login {
        proxy_pass http://localhost:3000/login;
        try_files $uri $uri/ @404;
    }

    location /register {
        proxy_pass http://localhost:3000/register;
        try_files $uri $uri/ @404;
    }

    location /movies-search {
        proxy_pass http://localhost:3000/movies-search;
        try_files $uri $uri/ @404;
    }

    location /music-search {
        proxy_pass http://localhost:3000/music-search;
        try_files $uri $uri/ @404;
    }

    location /books-search {
        proxy_pass http://localhost:3000/books-search;
        try_files $uri $uri/ @404;
    }

    location /about {
        proxy_pass http://localhost:3000/about;
        try_files $uri $uri/ @404;
    }

    location ~ ^/movies-search/(.*)$ {
        proxy_pass http://localhost:3000/movies-search/$1;
        try_files $uri $uri/ @404;
    }

    location ~ ^/music-search/(.*)$ {
        proxy_pass http://localhost:3000/music-search/$1;
        try_files $uri $uri/ @404;
    }

    location ~ ^/books-search/(.*)$ {
        proxy_pass http://localhost:3000/books-search/$1;
        try_files $uri $uri/ @404;
    }

    location @404 {
        proxy_pass http://localhost:3000;
    }
    
    location @404 {
        proxy_pass http://localhost:3000/404;
    }

}
